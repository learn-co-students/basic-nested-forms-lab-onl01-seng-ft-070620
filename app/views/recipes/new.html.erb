<%= form_for @recipe do |f| %>
  <%= f.label :title, "Recipe Title: " %>
  <%= f.text_field :title %><br><br>

  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :name, "Ingredient Name: " %>
    <%= i.text_field :name %><br><br>

    <%= i.label :quantity, "Quantity: " %>
    <%= i.text_field :quantity %><br><br>
  <% end %>

  <%= f.submit %>
<% end %>
