<h1>Create A New Recipe</h1>
<%= form_for :recipe do |f| %>
    <%= f.label 'Recipe Name: ' %>
    <%= f.text_field :title %><br><br>

    <%= f.fields_for :ingredients do |i| %>
        <%= i.label 'Ingredient 1: ' %>
        <%= i.text_field :name %><br>

        <%= i.label 'Quantity: ' %>
        <%= i.text_field :quantity %><br><br>

    <% end %>

    <%= f.fields_for :ingredients do |i| %>
        <%= i.label 'Ingredient 2: ' %>
        <%= i.text_field :name %><br>

        <%= i.label 'Quantity: ' %>
        <%= i.text_field :quantity %><br><br>

    <% end %>




    <%= f.submit %>
<% end %>